# Environment variables for bash

export LANG='en_GB.UTF-8'

export MANWIDTH="80"
export PROMPT_COMMAND="history -a; history -n"
export PS1="\W \\$ "
export MC_SKIN="modarin256-defbg"
export EDITOR="/usr/bin/emacs -Q -nw"
export VISUAL="/usr/bin/emacs -Q -nw"

export GOPATH="$HOME/src/go"
export SSH_AUTH_SOCK="/tmp/ssh-agent-$USER.socket"

export LESS='-R'
export POWERDEVIL_NO_DDCUTIL='1'

export PATH="${HOME}/.local/bin:${HOME}/perl5/bin:${PATH}"
export HISTSIZE="-1"
export HISTFILESIZE="-1"
export HISTTIMEFORMAT="%d %B %Y %T "
export HISTCONTROL="ignoredupes"
export HISTIGNORE="ls::logout:exit"
